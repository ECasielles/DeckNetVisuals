<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settingsAccount">

        <SwitchPreference
            android:defaultValue="false"
            android:title="@string/settingsRememberAccount"
            android:key="remember_user" />
        <EditTextPreference
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settingsRememberAccountTitle"
            android:summary="@string/settingsRememberAccountTitleSummary"
            android:key="user" />
        <EditTextPreference
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settingsRememberAccountPassword"
            android:summary="@string/settingsRememberAccountPasswordTitle"
            android:key="password"
            android:inputType="textPassword" />

    </PreferenceCategory>
</PreferenceScreen>